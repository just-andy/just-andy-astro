---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allArticles = await getCollection("articles");
---

<Layout
  title="Welcome"
  description="Portfolio of Edinburgh based digital designer Andrew Cetnarskyj"
>
  <main class="container container--wide">
    <h2 class="intro">I WORK WITH DESIGN SYSTEMS AND TINKER WITH CODE...</h2>

    <div class="grid__two-column" id="main-content">
      <ul>
        {
          allArticles.map((article) => (
            <li>
              <a href={`/articles/${article.id}`}>{article.data.title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
