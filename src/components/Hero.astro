---
import { Image } from "astro:assets";

export interface Props {
  url: any;
  title: string;
  summary: string;
  tags: string[];
}

const { url, title, summary, tags } = Astro.props;
---

<div class="hero">
  <Image src={url} alt="" loading="eager" />
  <div class="hero__content">
    <h1>{title}</h1>
    <div>{summary}</div>
    <div>{tags}</div>
  </div>
</div>
